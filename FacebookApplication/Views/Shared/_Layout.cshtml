<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Facebook Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Facebook Application", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="livesearchli">
                        <input type="text" class="searchtext" id="searchtext" placeholder="Search friends..." />
                        <ul id="livesearchul"></ul>
                    </li>
                </ul>
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right owner">
                        <li class="frcountli">
                            @if (ViewBag.FRCount != null)
                            {
                                <span class="glyphicon glyphicon-user red frnotif @User.Identity.Name"><span>@ViewBag.FRCount</span></span>
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-user frnotif @User.Identity.Name"><span></span></span>
                            }
                            <ul id="frnotiful"></ul>
                        </li>
                   <li class="name">@ViewBag.FullName</li>
                    <li class="logout">@Html.ActionLink("Logout", "Logout", "Account")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
